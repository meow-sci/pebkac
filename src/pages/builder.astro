---
import BaseLayout from "../layouts/BaseLayout.astro";
import { BuilderPage } from "../components/BuilderPage";
---

<BaseLayout>
  <style slot="head" is:global>
    body {
      height: 100vh;

      background-color: #222222;

      color: #00ff00;

      display: grid;
      grid-template-rows: min-content min-content 1fr;

      row-gap: 0.5rem;
    }

    #actions {
      padding: 0.5rem;
      display: grid;
      grid-auto-flow: column;
      column-gap: 0.5rem;
      justify-content: start;

      button {
        font-size: 1rem;
        border-radius: 0;
        border: none;
        background-color: #00ff00;
        color: #000000;
      }

      input {
        border: solid 1px #00ff00;
        background-color: #222222;

        color: #00ff00;
        font-family: "Inter Variable", system-ui;
        font-size: 1rem;
        border-radius: 0;
        outline: none;
      }
    }

    dialog {
      background-color: #222222;
      color: #00ff00;

      button {
        font-size: 1rem;
        border-radius: 0;
        border: none;
        background-color: #00ff00;
        color: #000000;
      }
    }
  </style>

  <BuilderPage client:only="react" />
</BaseLayout>
